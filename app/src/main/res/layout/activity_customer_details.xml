<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerDetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:padding="7dp"
        android:layout_margin="10dp"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/customerNameTextViewId"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Name :  Abdullah"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/customerPhoneTextViewId"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Phone : 01994215664"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/customerEmailTextViewId"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Email : abdullah272056@gmail.com"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:lineHeight="35sp"
            android:id="@+id/customerAddressTextViewId"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Address : Ruly, Vairabha, Maheshpur, Jhenaidah"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/background"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="MissingConstraints"
         >
            <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:text="All Time Sell : ৳"
        android:textColor="#000000"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/allTimeSellTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="00"
        android:textColor="#000000"
        android:textSize="20sp" />

</LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:text="Due : ৳"
                    android:textColor="#FA0000"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/dueTextViewId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="00"
                    android:textColor="#F42525"
                    android:textSize="20sp" />

            </LinearLayout>




            <EditText
                android:id="@+id/duePayAmountEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:autofillHints="#000000"
                android:background="#FFFEFE"
                android:hint="Pay amount* "
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/payDueButtonId"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="12dp"
                android:text="Pay Due"
                android:textColor="#000000"
                android:textSize="25sp" />


        </LinearLayout>

        <ProgressBar
            android:layout_marginBottom="120dp"
            android:id="@+id/pauDueProgressBarId"
            android:layout_width="59dp"
            android:layout_height="67dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
   
        </LinearLayout>
    </ScrollView>

</LinearLayout>