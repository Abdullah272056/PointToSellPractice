<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="#E0FBFF"
                android:padding="10dp"
                android:gravity="center"
                android:text="Product Details"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#00B100"
                android:id="@+id/productNameTextViewId"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="Product Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="centerCrop"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/productImageViewId"
                android:layout_marginBottom="20sp"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <LinearLayout
                android:padding="2dp"
                android:background="@drawable/background"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000000"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Regular Price"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:textColor="#000000"
                        android:background="@drawable/back2"
                        android:id="@+id/productRegularPriceTextViewId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Regular Price"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000000"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Selling Price"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:textColor="#000000"
                        android:background="@drawable/back2"
                        android:id="@+id/productSellingPriceTextViewId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="selling price"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Stock"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                    <TextView
                        android:textColor="#000000"
                        android:background="@drawable/back2"
                        android:id="@+id/productStockTextViewId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Stock"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Unit"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                    <TextView
                        android:textColor="#000000"
                        android:background="@drawable/back2"
                        android:id="@+id/productUnitTextViewId"
                        android:paddingLeft="10dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="Unit"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000000"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Description"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                    <TextView
                        android:textColor="#000000"
                        android:background="@drawable/back2"
                        android:id="@+id/productDescriptionTextViewId"
                        android:paddingLeft="10dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="description"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Add Date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                    <TextView
                        android:textColor="#000000"
                        android:background="@drawable/back2"
                        android:id="@+id/productAddDateTextViewId"
                        android:paddingLeft="10dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="add date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Update Date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                    <TextView
                        android:textColor="#000000"
                        android:background="@drawable/back2"
                        android:id="@+id/productUpdateDateTextViewId"
                        android:paddingLeft="10dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="update Date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>




            <Button
                android:id="@+id/okButtonId"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Ok"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </ScrollView>



</LinearLayout>
