<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    android:background="@drawable/back"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Name:"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/productNameTextViewId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Product Name"
                    android:textAppearance="?android:textAppearanceLarge" />

        </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Price:"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/productSellingPriceTextViewId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Selling Price"
                    android:textAppearance="?android:textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Stock:"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/productStockTextViewId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Product Stock"
                    android:textAppearance="?android:textAppearanceMedium" />

            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:background="#BFB5B5"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/addQuantityTextViewId"
                    android:layout_weight="1"
                    android:background="#F8F1F1"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="+"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:id="@+id/quantityTextViewId"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/subQuantityTextViewId"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:background="#F8F1F1"
                    android:textAlignment="center"
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>


        </LinearLayout>
        <LinearLayout
            android:paddingRight="7dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_baseline_delete_24"
                android:id="@+id/itemDeleteButtonId"
                android:textSize="30sp"
                android:text="X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>