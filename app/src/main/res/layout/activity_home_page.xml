<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayoutId"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".HomePage">

    <LinearLayout

        android:id="@+id/mainLayoutId"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/my_toolbar"
            android:id="@+id/toolbarId"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="Total Product Cost"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:text="00 Taka"
                        android:gravity="center"
                        android:textColor="#02AF05"
                        android:textSize="30sp"
                        android:id="@+id/totalProductCostTextViewId"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:gravity="center"
                        android:textColor="#02877A"
                        android:text="Total product stock"
                        android:textSize="17sp"
                        android:id="@+id/totalProductStockTextViewId"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:gravity="center"
                        android:textColor="#00BCD4"
                        android:text="Total product type"
                        android:textSize="17sp"
                        android:id="@+id/totalProductTypeTextViewId"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>


                </LinearLayout>
                <LinearLayout
                    android:weightSum="5"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="Total Sell Amount"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:text="00 Taka"
                        android:gravity="center"
                        android:textColor="#02AF05"
                        android:textSize="30sp"
                        android:id="@+id/totalSaleAmountTextViewId"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:gravity="center"
                        android:textColor="#02877A"
                        android:text="Total product sale 00"
                        android:textSize="17sp"
                        android:id="@+id/totalSoldProductQuantityTextViewId"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:gravity="center"
                        android:textColor="#00BCD4"
                        android:text="Total invoice 00"
                        android:textSize="17sp"
                        android:id="@+id/totalSoldInvoiceTextViewId"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>


                </LinearLayout>
                <LinearLayout
                    android:weightSum="5"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="Total Customer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_weight="1.5"
                        android:textColor="#3F51B5"
                        android:id="@+id/customerCountId"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:text="4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="5"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="Total Due Amount"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:text="00 Taka"
                        android:gravity="center"
                        android:textColor="#AF0000"
                        android:textSize="30sp"
                        android:id="@+id/totalDueAmountTextViewId"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="5"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="Total Profit Amount"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:text="00 Taka"
                        android:gravity="center"
                        android:textColor="#04A119"
                        android:textSize="30sp"
                        android:id="@+id/totalProfitTextViewId"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>





      <LinearLayout
          android:orientation="vertical"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
              android:id="@+id/tokenTextId"
              android:textSize="40sp"
              android:text="This is Home page"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <Button
              android:layout_marginTop="50dp"
              android:id="@+id/customerId"
              android:textSize="30sp"
              android:text="Customer Data"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

      </LinearLayout>


    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        app:itemIconTint="#0B0B0B"
        app:itemTextColor="#040303"
        android:id="@+id/myNavigationViewId"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/my_menu" />


</androidx.drawerlayout.widget.DrawerLayout>