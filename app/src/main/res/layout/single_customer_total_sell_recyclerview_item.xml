<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Date"
                android:layout_width="155dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/datetextViewId"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="November 11th 2020"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Total Amount"
                android:layout_width="155dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/totalSellAmountTextViewId"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Pay Amount"
                android:layout_width="155dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/totalPayAmountTextViewId"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Due"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/totalDueAmountTextViewId"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


<LinearLayout
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginBottom="7dp"
        android:padding="13dp"
        android:layout_weight="1"
        android:id="@+id/editImageViewId"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <ImageView
        android:layout_marginTop="7dp"
        android:padding="13dp"
        android:layout_weight="1"
        android:id="@+id/deleteImageViewId"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>


</LinearLayout>
