<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/download1"
    tools:context=".RegistrationActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:padding="10dp"
                android:background="#DAD3D3"
                android:id="@+id/signUpCompanyNameEditTextId"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:hint="Company Name*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:drawableRight="@drawable/ic_baseline_person_24"
                android:padding="10dp"
                android:background="#DAD3D3"
                android:id="@+id/signUpCompanyOwnerEditTextId"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:hint="Company Owner*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:drawableRight="@drawable/ic_baseline_email_24"
                android:padding="10dp"
                android:background="#DAD3D3"
                android:id="@+id/signUpEmailEditTextId"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:hint="Email address*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <EditText
                android:drawableRight="@drawable/ic_baseline_phone_24"
                android:padding="10dp"
                android:background="#DAD3D3"
                android:id="@+id/signUpPhoneEditTextId"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:hint="Phone*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:padding="10dp"
                android:background="#DAD3D3"
                android:id="@+id/signUpAddressEditTextId"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:hint="Address*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:background="#DAD3D3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                   android:padding="10dp"
                    android:textSize="20sp"
                    android:entries="@array/business_type"
                    android:id="@+id/businessTypeSpinnerId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <EditText
                android:padding="10dp"
                android:background="#DAD3D3"
                android:id="@+id/signUpAboutCompanyEditTextId"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:hint="Type SomeThing About your Company*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:drawableRight="@drawable/ic_baseline_lock_24"
                android:padding="10dp"
                android:background="#DAD3D3"
                android:id="@+id/signUpPasswordEditTextId"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:hint="password*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:drawableRight="@drawable/ic_baseline_lock_24"
                android:padding="10dp"
                android:background="#DAD3D3"
                android:id="@+id/signUpConfirmPasswordEditTextId"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:hint="confirm password*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:background="#2196F3"
                android:padding="10dp"
                android:id="@+id/signUpButtonId"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:text="Sign Up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#ffffff"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="right"
                android:id="@+id/signInTextViewId"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:text="already Have an account? Sign In"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:layout_marginBottom="120dp"
        android:id="@+id/registrationProgressBarId"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>